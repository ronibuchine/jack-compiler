class Bird {

    var int xPos;
    var int yPos;
    var int radius;

    constructor Bird new(int xPos, int yPos, int radius) {
        let this.xPos = xPos;
        let this.yPos = yPos;
        let this.radius = radius;
        return this;
    }


    method void move() {
        // need to implement gravity so this looks natural
        // maybe store last few frames and take an array of frames as arg?
        if (Keyboard.keyPressed() = String.upArrow()) {
            let yPos = yPos - 40; 
        }
        else {
            let yPos = yPos + 40;
        }
        return;
    }

    method void draw() {
        Screen.drawCircle(xPos, yPos, radius);
        return
    }

}